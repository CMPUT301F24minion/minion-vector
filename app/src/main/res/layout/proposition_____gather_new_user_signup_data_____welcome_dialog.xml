<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20sp"
    android:background="@color/white">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey! We don't recognize you!"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:paddingBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:paddingVertical="20sp"
        />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What's your name?"
        android:padding="10dp"
        android:fontFamily="sans-serif-light"
        />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="...and email?"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        />

    <EditText
        android:id="@+id/phoneNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="...and phone number?"
        android:inputType="phone"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        />

    <EditText
        android:id="@+id/locationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="...in what city are you located?"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/whatDescribesMeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What best describes you?"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:paddingBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:paddingVertical="20sp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attendeePermissionsCheckBox"
        android:text="&quot;I want to attend events.&quot;"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/organizerPermissionsCheckBox"
        android:text="&quot;I am an event organizer.&quot;"
        />

</LinearLayout>
