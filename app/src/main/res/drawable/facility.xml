<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Building background (transparent with black perimeter) -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:color="#000000" android:width="10dp"/>
            <corners android:radius="16dp"/>
            <size android:width="100dp" android:height="150dp"/>
        </shape>
    </item>

    <!-- Door (smaller and centered black rectangle) -->
    <item
        android:left="40dp"
        android:top="100dp"
        android:right="40dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#000000"/>
            <size android:width="36dp" android:height="40dp"/>
        </shape>
    </item>
</layer-list>
